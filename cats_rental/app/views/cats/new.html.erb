<h1>Create a cat!</h1>
<form action="<%= cats_url %>" method="POST">

    <label>Name
        <input type="text" name="cat[name]" value="<%=@cat.name%>">
    </label>

    <br>

    <label>Sex
        <input type="radio" name="cat[sex]" value="M">M
        <input type="radio" name="cat[sex]" value="F">F
    </label>

    <br>

    <label>Color
        <select name="cat[color]">
            <option value="">--select a color--</option>
            <% Cat.colors.each do |color| %>
                <option value="<%= color %>"><%= color.capitalize %></option>
            <% end %>
        </select>
    </label>

    <br>

    <label>Birth Date
        <input type="date" name="cat[birthdate]">
    </label>

    <br>

    <label>Desciption <br>
        <textarea name="cat[description]" id="" cols="30" rows="10"><%=@cat.description%></textarea>
    </label>

    <br>

    <input type="submit" value="Create Cat">

</form>